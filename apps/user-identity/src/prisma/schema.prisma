generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://user:password@localhost:5432/user_identity?schema=public"
}

model User {
  id            Int         @id @default(autoincrement())
  username      String
  email         String      @unique
  emailVerified Boolean
  password      String?
  image         String
  authToken     AuthToken[]
  account       Account[]
}

model Account {
  id       Int          @id @default(autoincrement())
  userId   Int
  provider ProviderEnum
  user     User         @relation(fields: [userId], references: [id])
}

enum ProviderEnum {
  GOOGLE
}

model AuthToken {
  id           Int      @id @default(autoincrement())
  userId       Int
  accessToken  String
  refreshToken String
  expiresAt    DateTime
  user         User     @relation(fields: [userId], references: [id])
}
